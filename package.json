{
  "name": "modular-saas-platform",
  "version": "1.0.0",
  "description": "Modular SaaS Platform with Next.js Frontend and Express Backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "sass": "sass styles/main.scss public/css/main.css",
    "sass:watch": "sass --watch styles/main.scss:public/css/main.css",
    "sass:build": "sass styles/main.scss public/css/main.css --style compressed",
    "template:build": "tsc --project tsconfig.template.json && npm run template:compile-css",
    "template:compile-css": "sass templates/template.scss templates/template.css --style compressed",
    "template:watch": "tsc --project tsconfig.template.json --watch",
    "template:serve": "live-server templates --port=8080",
    "prisma:generate": "cd backend && prisma generate",
    "prisma:migrate:dev": "cd backend && prisma migrate dev --name init",
    "prisma:migrate:deploy": "cd backend && prisma migrate deploy",
    "prisma:db:push": "cd backend && prisma db push",
    "deploy": "bash ./scripts/deploy.sh",
    "backup": "bash ./scripts/backup_db.sh",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "start": "cd frontend && npm start",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production') require('husky').install()\"",
    "docs:lint": "markdownlint-cli2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "saas",
    "nextjs",
    "express",
    "prisma",
    "docker"
  ],
  "author": "",
  "license": "MIT",
  "resolutions": {
    "typescript": "^5.9.3",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "pnpm": {
    "overrides": {
      "js-yaml": ">=4.1.1",
      "next": ">=14.2.32",
      "body-parser": ">=1.20.3",
      "path-to-regexp": ">=0.1.12",
      "express": ">=4.20.0",
      "cookie": ">=0.7.0",
      "send": ">=0.19.0",
      "serve-static": ">=1.16.0",
      "esbuild": ">=0.25.0"
    },
    "ignoredBuiltDependencies": [
      "argon2",
      "bcrypt"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "markdownlint-cli": "^0.41.0",
    "markdownlint-cli2": "^0.14.0",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "redis": "^5.9.0"
  },
  "lint-staged": {
    "*.md": "markdownlint --fix"
  }
}
