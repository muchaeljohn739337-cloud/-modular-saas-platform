{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/routes.bak",
    "src/rpa/**",
    "src/services/alertService.ts",
    "tests/**/*",
    "src/routes/analyticsEnhanced.ts",
    "src/routes/oal.ts",
    "src/routes/cryptomus.ts",
    "src/routes/debitCard.ts",
    "src/routes/medbeds.ts",
    "src/routes/paymentsEnhanced.ts",
    "src/routes/adminBulkActions.ts",
    "src/utils/fakeDataGenerator.ts",
    "src/utils/pdfGenerator.ts",
    "src/services/emailSecurityService.ts",
    "src/services/emailService.ts",
    "src/services/ethGateway.ts",
    "src/services/oalAlert.ts",
    "src/middleware/accessJWT.ts",
    "src/tracing.ts",
    "src/routes/payments.ts",
    "src/routes/users.ts",
    "src/services/notificationService.ts",
    "src/routes/passwordRecovery.ts",
    "src/routes/invoices.ts",
    "src/routes/emails.ts",
    "src/routes/email-test.ts",
    "src/routes/userApproval.ts",
    "src/routes/transactions.ts"
  ]
}
