# Staging Environment Configuration
NODE_ENV=staging
PORT=5000

# Database (Staging PostgreSQL - separate from production)
DATABASE_URL="postgresql://username:password@staging-host:5432/advancia_pay_ledger_staging"

# Authentication (Staging secrets - different from production)
JWT_SECRET="staging-jwt-secret-minimum-32-characters-high-entropy-secure"
JWT_EXPIRES_IN="12h"

# Encryption (Staging key - different from production)
ENCRYPTION_KEY="staging-encryption-key-32-chars-12"

# Redis (Staging Redis instance)
REDIS_URL="redis://staging-redis-host:6379"

# Email Service (Staging Resend - use test API)
RESEND_API_KEY="staging-resend-api-key"
EMAIL_FROM="staging@yourdomain.com"

# Stripe (Test keys for staging)
STRIPE_SECRET_KEY="sk_test_your_staging_test_key_here"
STRIPE_PUBLISHABLE_KEY="pk_test_your_staging_publishable_key_here"
STRIPE_WEBHOOK_SECRET="whsec_test_staging_webhook_secret"

# Admin Configuration
ADMIN_EMAIL="admin@staging.yourdomain.com"
ADMIN_PASSWORD="CHANGE_THIS_IMMEDIATELY_AFTER_FIRST_LOGIN"

# CORS Configuration
FRONTEND_URL="https://staging.yourdomain.com"
ALLOWED_ORIGINS="https://staging.yourdomain.com"

# Security (Production-like settings for testing)
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/staging.log"

# Monitoring
SENTRY_DSN="https://your-staging-sentry-dsn@sentry.io/project-id"
